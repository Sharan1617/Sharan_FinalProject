<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sharan's Gift Shop</title>
    <script src="js/taxes.js"></script>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <header>
    <%- include('partials/logoTitle.ejs') %> 
    <h1>Edit Page</h1>
    <nav>
      <a href="/login">Login</a>
      <a href="/allOrders"  target="_blank">All Complaints</a>
    </nav>
  </header>
    <main>
      <div class="myForm">
         <form name="myform" method="Post" onsubmit="return formSubmit();" action="/editprocess/<%= _id %>" enctype="multipart/form-data">
                <h2>Personal Information</h2>

                <!-- Label and input for name -->
                <label for="name">Name :</label>
                <input name="name" id="name" placeholder="Enter Name" value="<%= name %>">
                <br />
                <br />

               
                <label for="phoneNumber">Phone Number</label>
                <input id="phoneNumber" name="phoneNumber" placeholder="eg: 5198201234" value="<%= phoneNumber%>">
                <br />
                <br />
                <label for="email">Email</label>
                <input id="email" name="email" placeholder="email@domain.com" value="<%= email %>">
                <br />
                <br />

                <label for="userImage">Image</label>
                <div id="editPageImage">                
                <input type="file" id="userImage" name="userImage">
                </div>
                
                <br />
                <br />

                <p id="userDescriptionForm">Complaint Box</p>
                <input type="text" id="userDescription" name="userDescription" value="<%- userDescription %>">

                <div class="submitClass">
                  <input id="submitButton" type="submit" value="Submit">   
                </div>
        </form>

      </div>        
    </main>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="/js/tinymce/tinymce.min.js"></script>
    <script>
        tinymce.init({
          selector: '#userDescription'
        });
    </script>
</body>
</html>